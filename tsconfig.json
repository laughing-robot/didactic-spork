{
  "compilerOptions": {
    "baseUrl": "./src",
       "paths": {
        "~*": [
            "./*"
        ]
    },
    "allowJs": true,
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "src/",
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "examples"
  ],
  "include": ["src/**/*"]
}
